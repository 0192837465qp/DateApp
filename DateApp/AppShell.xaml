<?xml version="1.0" encoding="UTF-8" ?>
<Shell x:Class="DateApp.AppShell"
       xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:views="clr-namespace:DateApp.Views"
       Shell.FlyoutBehavior="Disabled"
       Shell.NavBarIsVisible="False">

    <ShellContent Route="login"
                  ContentTemplate="{DataTemplate views:LoginPage}" />

    <ShellContent Route="register"
                  ContentTemplate="{DataTemplate views:RegisterPage}" />

    <ShellContent Route="profilesetup"
                  ContentTemplate="{DataTemplate views:ProfileSetupPage}" />

    <ShellContent Route="swipe"
                  ContentTemplate="{DataTemplate views:SwipePage}" />

</Shell>